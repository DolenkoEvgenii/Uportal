<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppThemeNoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="SelectableItemTheme">
        <item name="colorControlHighlight">@color/iconRippleColor</item>
    </style>

    <style name="SelectableIconBackgroundBorderless">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:theme">@style/SelectableItemTheme</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
    </style>

    <style name="SelectableIconBackground">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:theme">@style/SelectableItemTheme</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="SelectableItemForeground">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:theme">@style/SelectableItemTheme</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <style name="SelectableItemForegroundBordless">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:theme">@style/SelectableItemTheme</item>
        <item name="android:foreground">?attr/selectableItemBackgroundBorderless</item>
    </style>
</resources>
